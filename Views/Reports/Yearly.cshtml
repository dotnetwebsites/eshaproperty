@model IEnumerable<Enquiry>

@{
    ViewData["Title"] = "Yearly Report";
    ViewData["ActivePage"] = "Reports";    
}

<div class="row">
    <div class="col-sm-12">
        <div class="panel panel-bd ">
            <div class="panel-heading">
                <div class="btn-group" id="buttonlist">
                    Yearly Report
                </div>
            </div>
            <div class="panel-body">
                <form class="col-sm-12">
                    <div class="col-sm-4 form-group" style="margin-left: -15px;">
                        <label>Year</label>
                        @* @Html.DropDownList("Year", null, "--Select Year--", htmlAttributes: new { @class = "form-control" }) *@
                        @* <input id="txtYear" type="text" maxlength="4" class="form-control" /> *@
                        <select id="txtYear" class="form-control">
                            <option value="2015">2015</option>
                            <option value="2016">2016</option>
                            <option value="2017">2017</option>
                            <option value="2018">2018</option>
                            <option value="2019">2019</option>
                            <option value="2020">2020</option>                            
                            <option value="2020">2020</option>
                            <option value="2021">2021</option>
                            <option value="2022">2022</option>
                            <option value="2023">2023</option>
                            <option value="2024">2024</option>
                            <option value="2025">2025</option>
                            <option value="2026">2026</option>
                            <option value="2027">2027</option>
                            <option value="2028">2028</option>
                            <option value="2029">2029</option>
                            <option value="2030">2030</option>
                        </select>
                    </div>
                    <div class="col-sm-4 form-group">
                        <a href="javascript:;" style="margin-top: 24px;" onclick="getReport()" class="btn btn-primary">Get Report</a>
                    </div>

                    <table class="table table-bordered table-striped example">
                        <thead>
                            <tr class="info">
                                <th>App No</th>
                                <th>Sales Rep Id</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Mobile No</th>                                
                                <th>Date</th>                                
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.EmpCode</td>                                                                                                     
                                    <td>@item.FullName</td>
                                    <td>@item.Email</td>
                                    <td>@item.PhoneNumber</td>
                                    <td>@item.CreatedDate.ToString("dd MMM yyyy hh:mm tt") </td>
                                    <td>
                                        <a asp-controller="Enquiry" asp-action="Details" 
                                        asp-route-id="@item.Id" class="btn btn-primary" title="Delete Record">
                                            <i class="fa fa-eye"></i>
                                        </a>                                                                            
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts
{
    <script type="text/javascript">
        function getReport()
        {
            var year = $("#txtYear").val();
            
            if(year=="" || year === undefined || year == null)
            {
                alert('Please enter year to fetch report.');
                return false;
            }

            window.location = "/Reports/Yearly/" + year;
        }

    </script>

}