@page
@model ForgotPasswordModel
@{
    Layout = null;
    ViewData["Title"] = "Forgot your password?";
}

<!DOCTYPE html>
<html lang="en">
<head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>EESHA: Infra Housing Pvt Ltd.</title>
        <link rel="shortcut icon" href="~/assets/dist/img/favicon.png" type="image/x-icon">
        <link href="~/assets/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css"/>
        <link href="~/assets/pe-icon-7-stroke/css/pe-icon-7-stroke.css" rel="stylesheet" type="text/css"/>
        <link href="~/assets/dist/css/stylecrm.css" rel="stylesheet" type="text/css"/>
    </head>
    <body >
        <section class="content " style="background: white; padding-top: 150px;padding-bottom: 120px;">
            <div class="container">
               <div class="row">
                  <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4 col-lg-offset-2">
                     <div class="panel panel-bd lobidisable">
                         <img src="~/assets/dist/img/EESHA-LOGO_PNG.png" class='img-responsive' />
                     </div>
                  </div>
                  <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4 ">
                      <div class="panel-body">   
                          <h3 class="text-black">Forgot Password</h3>
                            <form id="account" method="post">
                                 <div asp-validation-summary="All" class="text-danger"></div>
                                    <div class="form-group">
                                        <label class="control-label" for="username">Email</label>
                                        <input asp-for="Input.Email" class="form-control" type="text" placeholder="Enter Registered Email"/>                                
                                    </div>                                
                                    <div>
                                        <button type="submit" class="btn btn-success btn-block"> Send Request</button>
                                    </div>
                                    <hr>
                                    <div>
                                    <a href="./Login" class="btn btn-default btn-block">Log In</a>
                                </div>
                                  
                            <div>
                            </div>
                        </form>
                        </div>
                       
                  </div>
               </div>
              </div>
            </section>
      
        <script src="~/assets/plugins/jQuery/jquery-1.12.4.min.js" type="text/javascript"></script>
        <script src="~/assets/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
    </body>
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
